<Window x:Name="WindowConsole" x:Class="Stormworks_VRMS.ConsoleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stormworks_VRMS"
        mc:Ignorable="d"
        Title="コンソール ウィンドウ" Height="450" Width="800" Background="Transparent" WindowStyle="ToolWindow" Closing="WindowConsole_Closing" SnapsToDevicePixels="True">
    <Border BorderBrush="#22A9A9A9" BorderThickness="1">
        <Grid Margin="-1">
            <TextBox x:Name="console" Background="Transparent" Style="{StaticResource ReadOnlyTextBox}" Margin="12" FontFamily="Consolas" FontSize="12" Foreground="White" IsReadOnly="True" IsUndoEnabled="False" AllowDrop="False" Focusable="False" ScrollViewer.CanContentScroll="True"/>
        </Grid>
    </Border>
</Window>
